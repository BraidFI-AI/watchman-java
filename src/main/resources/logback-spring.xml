<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for development - human-readable format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{requestId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- JSON appender for production - structured logging -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampFormat>
                <timestampFormatTimezoneId>UTC</timestampFormatTimezoneId>
                <appendLineSeparator>true</appendLineSeparator>
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>false</prettyPrint>
                </jsonFormatter>
            </layout>
        </encoder>
    </appender>

    <!-- Development profile - human-readable logs -->
    <springProfile name="default,dev,test">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        
        <!-- Debug logging for our code in development -->
        <logger name="io.moov.watchman" level="DEBUG"/>
        
        <!-- Reduce noise from frameworks -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="com.zaxxer.hikari" level="WARN"/>
    </springProfile>

    <!-- Production profile - JSON structured logs -->
    <springProfile name="production,prod">
        <root level="INFO">
            <appender-ref ref="JSON"/>
        </root>
        
        <logger name="io.moov.watchman" level="INFO"/>
        
        <!-- Reduce noise from frameworks -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="com.zaxxer.hikari" level="WARN"/>
    </springProfile>

    <!-- Batch profile - JSON structured logs for AWS Batch -->
    <springProfile name="batch">
        <root level="INFO">
            <appender-ref ref="JSON"/>
        </root>
        
        <logger name="io.moov.watchman" level="INFO"/>
        
        <!-- Reduce noise from frameworks -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="com.zaxxer.hikari" level="WARN"/>
    </springProfile>
</configuration>
